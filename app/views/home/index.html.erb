<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <style>
    tr:nth-child(even) {
      background-color: #C0D6DF
    }
    td {
      padding: 8px 
    }
  </style>
  <body>
    <div class='grid grid-cols-2 justify-items-center'>
      <div>
        <table>
          <thead>
            <tr>
              <th colspan='3' style='text-align:center; font-size:20px; color:#4F6D7A'>20 Most Played Games</th>
            </tr>
          </thead>
          <tbody>
            <% @played_games_sorted[0, 20].each.with_index(1) do |game, index| %>
              <tr>
                <td><%= index %></td>
                <td><%= game.name %></td>
                <td><%= game.playtime_forever/60 %> hours</td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <br>
      <div>
        <table>
          <thead>
            <tr>
              <th colspan='2' style='text-align:center; font-size:20px; color:#4F6D7A'>20 Oldest Friends</th>
            </tr>
          </thead>
          <tbody>
            <% @friends.each do |friend| %>
              <tr>
                <td><%= friend.steam_id %></td>
                <td><%= friend.friend_since %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </body>
</html>
